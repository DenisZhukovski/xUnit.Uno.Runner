<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="clr-namespace:Uno.Toolkit.UI;assembly=Uno.Toolkit.WinUI"
      x:Class="Xunit.Uno.Runner.CreditsPage"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <StackPanel>
    <ui:NavigationBar
      Content="Credits"
      Style="{StaticResource NativeDefaultNavigationBar}"/>
    <StackPanel Padding="10, 0" Spacing="5">
      <TextBlock Text="xUnit Device Runner" FontSize="20" FontWeight="Bold"/>
      <TextBlock Text="Copyright © 2015" />
      <TextBlock Text="Outercurve Foundation" />
      <TextBlock Text="All rights reserved." />
      <TextBlock Text="Author: Oren Novotny" />
      <HyperlinkButton Content="About xUnit" NavigateUri="https://xunit.net/"/>
    </StackPanel>
  </StackPanel>
</Page>
